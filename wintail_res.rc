
#include "resource.h"

#include "windows.h"
LANGUAGE LANG_NEUTRAL, SUBLANG_NEUTRAL
CREATEPROCESS_MANIFEST_RESOURCE_ID RT_MANIFEST    "wintail.manifest"
IDI_MAINICON            ICON    DISCARDABLE     "wintail.ico"
IDM_MAIN_MENU MENU DISCARDABLE 
BEGIN
    POPUP "&File"
    BEGIN
        MENUITEM "&Refresh",       IDM_REFR
        MENUITEM "&Auto-refresh",  IDM_AREF
        MENUITEM SEPARATOR
        MENUITEM "&Search/Filter", IDM_SEFI
        MENUITEM SEPARATOR
        MENUITEM "E&xit",          IDM_EXIT
    END
    POPUP "&Help"
    BEGIN
        MENUITEM "&About wintail...",          IDM_ABOUT
    END
END

IDM_CONTEXT_MENU MENU DISCARDABLE 
BEGIN
    POPUP "Context Menu"
    BEGIN
        MENUITEM "&Refresh",       IDM_REFR
        MENUITEM "&Auto-refresh",  IDM_AREF
        MENUITEM SEPARATOR
        MENUITEM "&Search/Filter", IDM_SEFI
    END
END


IDD_ABOUT DIALOG DISCARDABLE  22, 17, 144, 75
STYLE DS_MODALFRAME | WS_CAPTION | WS_SYSMENU
CAPTION "About wintail"
FONT 8, "MS Sans Serif"
BEGIN
    CTEXT           "Wintail",-1,0,5,144,8
    CTEXT           "The windows GUI tail equivalent",-1,0,20,144,8
    CTEXT           "(More or less)",-1,0,34,144,8
    DEFPUSHBUTTON   "OK",IDOK,53,59,32,14,WS_GROUP
END

STRINGTABLE DISCARDABLE 
BEGIN
    IDS_APPTITLE            "Virtual ListView Sample Application"
END

